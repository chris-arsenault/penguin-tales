{
  "$schema": "Distribution targets for statistical world generation tuning",
  "version": "1.0.0",
  "global": {
    "totalEntities": {
      "target": 150,
      "tolerance": 0.1,
      "comment": "Target total entities with 10% tolerance"
    },
    "entityKindDistribution": {
      "type": "uniform",
      "comment": "Distribution of entity kinds - should sum to 1.0",
      "targets": {
        "npc": 0.2,
        "location": 0.3,
        "faction": 0.2,
        "rules": 0.15,
        "abilities": 0.15
      },
      "tolerance": 0.05
    },
    "prominenceDistribution": {
      "type": "normal",
      "comment": "Normal distribution centered on 'recognized'",
      "mean": "recognized",
      "stdDev": 1,
      "targets": {
        "forgotten": 0.1,
        "marginal": 0.25,
        "recognized": 0.3,
        "renowned": 0.25,
        "mythic": 0.1
      },
      "perKind": {
        "enabled": true,
        "comment": "Each entity kind should also follow this distribution"
      }
    },
    "relationshipDistribution": {
      "type": "diverse",
      "comment": "Prevent over-concentration in single relationship types",
      "maxSingleTypeRatio": 0.15,
      "minTypesPresent": 12,
      "minTypeRatio": 0.02,
      "preferredDiversity": {
        "social": 0.25,
        "political": 0.2,
        "economic": 0.15,
        "spatial": 0.2,
        "cultural": 0.2
      }
    },
    "graphConnectivity": {
      "type": "clustered",
      "comment": "Multiple interconnected clusters, not uniform soup",
      "clusteringStrengthThreshold": 0.6,
      "clusteringComment": "Only relationships with strength >= 0.6 form clusters (narrative-strong bonds)",
      "targetClusters": {
        "min": 3,
        "max": 8,
        "preferred": 5
      },
      "clusterSizeDistribution": {
        "type": "powerlaw",
        "alpha": 2.5,
        "comment": "Few large clusters, many small ones"
      },
      "densityTargets": {
        "intraCluster": 0.65,
        "interCluster": 0.12,
        "comment": "Dense clusters, sparse connections between"
      },
      "isolatedNodeRatio": {
        "max": 0.05,
        "comment": "Max 5% completely isolated nodes"
      }
    }
  },
  "perEra": {
    "The Great Thaw": {
      "comment": "Expansion era - more locations, explorers",
      "entityKindDistribution": {
        "location": 0.35,
        "npc": 0.28,
        "faction": 0.15
      },
      "prominenceDistribution": {
        "marginal": 0.35,
        "recognized": 0.3,
        "comment": "More marginal entities during founding"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "located_at",
          "discovered_by",
          "founded_by"
        ],
        "preferredRatio": 0.3
      }
    },
    "The Faction Wars": {
      "comment": "Conflict era - more prominent NPCs, rivalries",
      "entityKindDistribution": {
        "npc": 0.35,
        "faction": 0.25
      },
      "prominenceDistribution": {
        "renowned": 0.3,
        "mythic": 0.15,
        "comment": "Heroes rise during conflict"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "enemy_of",
          "enemy_of",
          "ally_of",
          "fought_against"
        ],
        "preferredRatio": 0.35
      }
    },
    "The Clever Ice Age": {
      "comment": "Innovation era - more abilities, rules",
      "entityKindDistribution": {
        "abilities": 0.18,
        "rules": 0.22,
        "npc": 0.28
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "discovered_by",
          "mastered_by",
          "teaches"
        ],
        "preferredRatio": 0.25
      }
    },
    "The Orca Incursion": {
      "comment": "Invasion era - alliances, unified response",
      "entityKindDistribution": {
        "faction": 0.28,
        "npc": 0.32
      },
      "prominenceDistribution": {
        "renowned": 0.35,
        "mythic": 0.18,
        "comment": "Legendary defenders emerge"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "ally_of",
          "defended_by",
          "member_of"
        ],
        "preferredRatio": 0.3
      },
      "graphConnectivity": {
        "interCluster": 0.2,
        "comment": "More cross-cluster connections during crisis"
      }
    },
    "The Frozen Peace": {
      "comment": "Reconstruction era - rebuilding, stabilization",
      "entityKindDistribution": {
        "location": 0.28,
        "rules": 0.2
      },
      "prominenceDistribution": {
        "recognized": 0.4,
        "marginal": 0.2,
        "comment": "Shift back to normal prominence levels"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "resident_of",
          "member_of",
          "allied_with"
        ],
        "preferredRatio": 0.25
      }
    }
  },
  "entities": [
    {
      "comment": "Per-subtype entity targets for homeostatic population control. Total ~150 entities.",
      "npc": {
        "hero": {
          "target": 20,
          "comment": "Heroes that emerge during conflict (reduced from unbounded)"
        },
        "merchant": {
          "target": 10,
          "comment": "Trade network NPCs"
        },
        "mayor": {
          "target": 5,
          "comment": "Colony leaders (1 per colony + succession)"
        },
        "orca": {
          "target": 5,
          "comment": "External threat NPCs (reduced from unbounded)"
        },
        "outlaw": {
          "target": 5,
          "comment": "Criminal faction members"
        }
      },
      "location": {
        "colony": {
          "target": 5,
          "comment": "Major settlements (2 initial + 3 founded)"
        },
        "geographic_feature": {
          "target": 15,
          "comment": "Resource locations (krill blooms, hunting grounds)"
        },
        "anomaly": {
          "target": 8,
          "comment": "Magical locations (enables cult/magic creation)"
        }
      },
      "faction": {
        "political": {
          "target": 10,
          "comment": "Major political factions (including splinters)"
        },
        "company": {
          "target": 5,
          "comment": "FIXED: Was merchant_guild, templates create company subtype"
        },
        "criminal": {
          "target": 3,
          "comment": "Criminal syndicates"
        },
        "cult": {
          "target": 10,
          "comment": "Mystical factions (reduced from unbounded, hard cap 15 in template)"
        }
      },
      "rules": {
        "social": {
          "target": 12,
          "comment": "Cultural norms and ideologies"
        },
        "edict": {
          "target": 8,
          "comment": "FIXED: Was economic, templates create edict subtype"
        },
        "taboo": {
          "target": 5,
          "comment": "FIXED: Added, templates create taboo subtype"
        }
      },
      "abilities": {
        "magic": {
          "target": 15,
          "comment": "Mystical techniques (reduced from unbounded)"
        },
        "technology": {
          "target": 15,
          "comment": "Practical innovations"
        }
      }
    }
  ],
  "tuning": {
    "comment": "Meta-parameters for the tuning system itself",
    "adjustmentSpeed": 0.3,
    "deviationSensitivity": 1.5,
    "minTemplateWeight": 0.05,
    "maxTemplateWeight": 3,
    "convergenceThreshold": 0.08,
    "measurementInterval": 5,
    "correctionStrength": {
      "entityKind": 1.2,
      "prominence": 0.8,
      "relationship": 1.5,
      "connectivity": 1
    }
  },
  "relationshipCategories": {
    "comment": "Categorization for diversity metrics",
    "social": [
      "friend_of",
      "enemy_of",
      "family_of",
      "mentor_of",
      "student_of"
    ],
    "political": [
      "ally_of",
      "enemy_of",
      "member_of",
      "leader_of",
      "believer_of"
    ],
    "economic": [
      "trades_with",
      "employs",
      "patron_of",
      "owes_debt_to"
    ],
    "spatial": [
      "resident_of",
      "located_at",
      "discovered_by",
      "founded_by"
    ],
    "cultural": [
      "worships_at",
      "practices",
      "teaches",
      "learned_from",
      "respects"
    ]
  }
}