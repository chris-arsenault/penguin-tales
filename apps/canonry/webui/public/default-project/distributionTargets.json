{
  "$schema": "Distribution targets for statistical world generation tuning",
  "version": "1.0.0",
  "global": {
    "totalEntities": {
      "target": 120,
      "tolerance": 0.1,
      "comment": "Target total entities with 10% tolerance"
    },
    "entityKindDistribution": {
      "type": "uniform",
      "comment": "Distribution of entity kinds - should sum to 1.0",
      "targets": {
        "npc": 0.19,
        "location": 0.26,
        "faction": 0.22,
        "rules": 0.17,
        "abilities": 0.16
      },
      "tolerance": 0.05
    },
    "prominenceDistribution": {
      "type": "normal",
      "comment": "Normal distribution centered on 'recognized'",
      "mean": "recognized",
      "stdDev": 1,
      "targets": {
        "forgotten": 0.1,
        "marginal": 0.22,
        "recognized": 0.28,
        "renowned": 0.24,
        "mythic": 0.16
      },
      "perKind": {
        "enabled": true,
        "comment": "Each entity kind should also follow this distribution"
      }
    },
    "relationshipDistribution": {
      "type": "diverse",
      "comment": "Prevent over-concentration in single relationship types",
      "maxSingleTypeRatio": 0.15,
      "minTypesPresent": 12,
      "minTypeRatio": 0.02,
      "preferredDiversity": {
        "social": 0.25,
        "political": 0.2,
        "economic": 0.15,
        "spatial": 0.2,
        "cultural": 0.2
      }
    },
    "graphConnectivity": {
      "type": "clustered",
      "comment": "Multiple interconnected clusters, not uniform soup",
      "clusteringStrengthThreshold": 0.6,
      "clusteringComment": "Only relationships with strength >= 0.6 form clusters (narrative-strong bonds)",
      "targetClusters": {
        "min": 3,
        "max": 8,
        "preferred": 5
      },
      "clusterSizeDistribution": {
        "type": "powerlaw",
        "alpha": 2.5,
        "comment": "Few large clusters, many small ones"
      },
      "densityTargets": {
        "intraCluster": 0.65,
        "interCluster": 0.12,
        "comment": "Dense clusters, sparse connections between"
      },
      "isolatedNodeRatio": {
        "max": 0.05,
        "comment": "Max 5% completely isolated nodes"
      }
    }
  },
  "perEra": {
    "The Great Thaw": {
      "comment": "Expansion era - more locations, explorers",
      "entityKindDistribution": {
        "location": 0.38,
        "npc": 0.22,
        "faction": 0.18
      },
      "prominenceDistribution": {
        "marginal": 0.35,
        "recognized": 0.3,
        "comment": "More marginal entities during founding"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "discovered_by",
          "originated_in",
          "resident_of"
        ],
        "preferredRatio": 0.3
      }
    },
    "The Faction Wars": {
      "comment": "Conflict era - more prominent NPCs, rivalries",
      "entityKindDistribution": {
        "npc": 0.25,
        "faction": 0.32
      },
      "prominenceDistribution": {
        "renowned": 0.3,
        "mythic": 0.15,
        "comment": "Heroes rise during conflict"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "enemy_of",
          "at_war_with",
          "allied_with",
          "splinter_of"
        ],
        "preferredRatio": 0.35
      }
    },
    "The Clever Ice Age": {
      "comment": "Innovation era - more abilities, rules",
      "entityKindDistribution": {
        "abilities": 0.22,
        "rules": 0.24,
        "npc": 0.2
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "derived_from",
          "practitioner_of",
          "taught_by"
        ],
        "preferredRatio": 0.25
      }
    },
    "The Orca Incursion": {
      "comment": "Invasion era - alliances, unified response",
      "entityKindDistribution": {
        "faction": 0.34,
        "npc": 0.22
      },
      "prominenceDistribution": {
        "renowned": 0.35,
        "mythic": 0.18,
        "comment": "Legendary defenders emerge"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "allied_with",
          "at_war_with",
          "member_of"
        ],
        "preferredRatio": 0.3
      },
      "graphConnectivity": {
        "interCluster": 0.2,
        "comment": "More cross-cluster connections during crisis"
      }
    },
    "The Frozen Peace": {
      "comment": "Reconstruction era - rebuilding, stabilization",
      "entityKindDistribution": {
        "location": 0.28,
        "rules": 0.2
      },
      "prominenceDistribution": {
        "recognized": 0.4,
        "marginal": 0.2,
        "comment": "Shift back to normal prominence levels"
      },
      "relationshipDistribution": {
        "preferredTypes": [
          "resident_of",
          "member_of",
          "allied_with"
        ],
        "preferredRatio": 0.25
      }
    }
  },
  "entities": [
    {
      "comment": "Per-subtype entity targets for homeostatic population control. Total ~150 entities.",
      "npc": {
        "hero": {
          "target": 12,
          "comment": "Heroes and companions that emerge during conflict"
        },
        "merchant": {
          "target": 8,
          "comment": "Trade network NPCs and guild workers"
        },
        "mayor": {
          "target": 6,
          "comment": "Colony leaders, founders, and aides"
        },
        "orca": {
          "target": 8,
          "comment": "External threat NPCs (hunt in pairs)"
        },
        "outlaw": {
          "target": 10,
          "comment": "Criminal faction members, splinter recruits, cult acolytes"
        }
      },
      "location": {
        "colony": {
          "target": 4,
          "comment": "Major settlements (2 initial + limited growth)"
        },
        "resource_node": {
          "target": 12,
          "comment": "Resource locations (krill blooms, hunting grounds)"
        },
        "point_of_interest": {
          "target": 12,
          "comment": "Strategic or notable sites"
        },
        "anomaly": {
          "target": 6,
          "comment": "Magical locations (enables cult/magic creation)"
        }
      },
      "faction": {
        "political": {
          "target": 10,
          "comment": "Major political factions (including splinters)"
        },
        "company": {
          "target": 7,
          "comment": "Trade organizations and guilds"
        },
        "criminal": {
          "target": 4,
          "comment": "Criminal syndicates"
        },
        "cult": {
          "target": 8,
          "comment": "Mystical factions"
        }
      },
      "rules": {
        "social": {
          "target": 6,
          "comment": "Cultural norms and ideologies"
        },
        "law": {
          "target": 6,
          "comment": "Civic laws and emergency measures"
        },
        "ideology": {
          "target": 4,
          "comment": "Ideological movements"
        },
        "memorial": {
          "target": 4,
          "comment": "Legends and commemorations"
        }
      },
      "abilities": {
        "magic": {
          "target": 7,
          "comment": "Mystical techniques"
        },
        "technology": {
          "target": 7,
          "comment": "Practical innovations"
        },
        "combat": {
          "target": 6,
          "comment": "Combat techniques"
        }
      }
    }
  ],
  "tuning": {
    "comment": "Meta-parameters for the tuning system itself",
    "adjustmentSpeed": 0.3,
    "deviationSensitivity": 1.5,
    "minTemplateWeight": 0.05,
    "maxTemplateWeight": 3,
    "convergenceThreshold": 0.08,
    "measurementInterval": 5,
    "correctionStrength": {
      "entityKind": 1.2,
      "prominence": 0.8,
      "relationship": 1.5,
      "connectivity": 1
    }
  },
  "relationshipCategories": {
    "comment": "Categorization for diversity metrics",
    "social": [
      "enemy_of",
      "allied_with",
      "taught_by",
      "related_to"
    ],
    "political": [
      "member_of",
      "leader_of",
      "splinter_of",
      "at_war_with",
      "participant_in"
    ],
    "economic": [
      "trades_with",
      "controls",
      "occupies"
    ],
    "spatial": [
      "resident_of",
      "adjacent_to",
      "contains",
      "contained_by",
      "originated_in"
    ],
    "cultural": [
      "believer_of",
      "commemorates",
      "celebrated_by",
      "derived_from",
      "manifests_at",
      "discovered_by",
      "explorer_of"
    ]
  }
}