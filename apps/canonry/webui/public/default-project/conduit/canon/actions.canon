action claim_victory "Claim Victory" do
  description "The dominant faction claims victory in a war-weary conflict, seizing contested territory"
  actor choose faction do
  end
  actor when do
    path exists do
      step participant_in out occurrence war status active
    end
    relationship_count member_of dst >= 2
  end
  actor instigator do
    from actor via participant_in src
    kind occurrence
    subtype war
    pick random
    where do
      tag has war_weary
    end
    required true
    status active
  end
  target choose faction do
    where do
      entity exclude actor
      relationship shares_related participant_in with actor
    end
  end
  on success do
    mutate do
      relationship archive target participant_in with instigator
      status change instigator historical
      relationship archive instigator participant_in all direction dst
      relationship archive actor enemy_of with target
      tag set target defeated true
      tag set actor victorious true
      tag set actor post_war_cooldown true
      tag set target post_war_cooldown true
      pressure modify cultural_harmony 8
      pressure modify iceberg_security 5
    end
  end
  narrative "achieved victory over {target.name}"
  prominence actor success 0.6 failure 0.3
  success_chance 0.35
  weight 0.3
  pressure_modifier iceberg_security 0.3
end

