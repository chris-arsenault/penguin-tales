action weapon_chooses_wielder "Weapon Chooses Wielder" do
  description "A weapon of legend selects a worthy hero - either finding its first owner or abandoning a fallen/corrupted one"
  actor choose artifact do
    subtype weapon
    status in intact damaged
  end
  actor when do
    when any do
      path not_exists do
        step owned_by src npc any
      end
      path exists do
        step owned_by src npc any do
          where do
            tag has corrupted
          end
        end
      end
    end
  end
  target choose npc do
    pick random
    subtype hero
    where do
      tag lacks armed
    end
    status alive
  end
  let $previousOwner do
    from actor via owned_by src
    kind npc
    pick first
    required false
  end
  on success do
    mutate do
      relationship archive actor owned_by all direction src
      tag remove previousOwner armed
      relationship create owned_by actor target strength 0.9
      tag set target armed true
      prominence adjust target 0.36
    end
  end
  narrative "{actor.name} chose {target.name} as its wielder"
  prominence actor success 0.6 failure 0.3
  success_chance 0.7
  weight 0.6
end

