  {
    "systemType": "connectionEvolution",
    "config": {
      "id": "prominence_evolution",
      "name": "Prominence Evolution",
      "description": "Entities with many connections gain prominence; isolated entities fade",
      "metric": {
        "type": "connection_count",
        "direction": "both"
      },
      "rules": [
        {
          "condition": {
            "operator": ">=",
            "threshold": 11,
            "multiplier": 6
          },
          "probability": 0.12,
          "action": {
            "type": "adjust_prominence",
            "direction": "up",
            "entity": "$self"
          }
        },
        {
          "condition": {
            "operator": "<=",
            "threshold": 3
          },
          "probability": 0.55,
          "action": {
            "type": "adjust_prominence",
            "direction": "down",
            "entity": "$self"
          }
