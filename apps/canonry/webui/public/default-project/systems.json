      "transmission": {
        "baseRate": 0.25,
        "contactMultiplier": 0.1,
        "maxProbability": 0.7
      },
      "infectionAction": {
        "type": "create_relationship",
        "kind": "at_war_with",
        "src": "$self",
        "dst": "$source",
        "strength": 0.4,
        "bidirectional": true
      },
      "throttleChance": 0.1,
      "cooldown": 4,
      "pressureChanges": {
        "harmony": -3
      },
      "selection": {
        "strategy": "by_kind",
        "kind": "faction"
      }
    },
    "enabled": true
  },
  {
    "systemType": "connectionEvolution",
    "config": {
      "id": "alliance_formation",
      "name": "Alliance Formation",
      "description": "Factions with shared enemies may form alliances",
      "metric": {
        "type": "shared_relationship",
        "sharedRelationshipKind": "at_war_with",
        "sharedDirection": "src"
