# LLM Enrichment Configuration (Anthropic Claude)
# Set to 'true', 'full', 'partial', or leave empty to disable
LLM_ENABLED=false

# Anthropic API key for text generation
ANTHROPIC_API_KEY=sk-ant-...

# LLM model to use for enrichment
LLM_MODEL=claude-3-5-haiku-20241022

# Number of entities to enrich per batch
LLM_BATCH_SIZE=2

# Image Generation Configuration (OpenAI DALL-E)
# Set to 'true' to enable image generation for mythic entities
IMAGE_GENERATION_ENABLED=false

# OpenAI API key for image generation
OPENAI_API_KEY=sk-...

# Image model (default: dall-e-3)
IMAGE_MODEL=dall-e-3

# Image size: 1024x1024 | 1792x1024 | 1024x1792
IMAGE_SIZE=1024x1024

# Image quality: standard | hd
IMAGE_QUALITY=standard
